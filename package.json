{
    "name": "next-payload",
    "version": "1.0.0",
    "description": "Minimal template to get started with Next.js and Payload 3.0",
    "author": {
        "name": "Mateusz Hallala ||HCSVNT||",
        "email": "hallala.work@gmail.com",
        "url": "http://hallala.work"
    },
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "cross-env NODE_OPTIONS=--no-deprecation next build --turbopack",
        "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack",
        "dev:w": "cross-env NODE_OPTIONS=--no-deprecation next dev",
        "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
        "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
        "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
        "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
        "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
        "pre-commit": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix && git add .",
        "pre-push": "cross-env NODE_OPTIONS=--no-deprecation && next lint --fix && next build",
        "prepare": "husky",
        "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
        "types": "tsc --noEmit"
    },
    "dependencies": {
        "@formatjs/intl-localematcher": "^0.5.10",
        "@grafana/faro-web-sdk": "^1.17.2",
        "@grafana/faro-web-tracing": "^1.17.2",
        "@gsap/react": "^2.1.2",
        "@hookform/resolvers": "^4.1.3",
        "@next/third-parties": "^15.3.1",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/api-logs": "^0.200.0",
        "@opentelemetry/auto-instrumentations-node": "^0.58.0",
        "@opentelemetry/instrumentation": "^0.200.0",
        "@opentelemetry/sdk-logs": "^0.200.0",
        "@opentelemetry/sdk-trace-node": "^2.0.0",
        "@payloadcms/db-mongodb": "^3.35.1",
        "@payloadcms/email-nodemailer": "^3.35.1",
        "@payloadcms/live-preview-react": "^3.38.0",
        "@payloadcms/next": "^3.35.1",
        "@payloadcms/payload-cloud": "^3.35.1",
        "@payloadcms/plugin-seo": "^3.38.0",
        "@payloadcms/richtext-lexical": "^3.35.1",
        "@payloadcms/storage-uploadthing": "^3.35.1",
        "@payloadcms/translations": "^3.35.1",
        "@payloadcms/ui": "^3.35.1",
        "@radix-ui/react-form": "^0.1.4",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/themes": "^3.2.1",
        "@react-email/components": "^0.0.41",
        "@react-email/render": "^1.1.2",
        "@uidotdev/usehooks": "^2.4.1",
        "@vercel/otel": "^1.11.0",
        "classnames": "^2.5.1",
        "cross-env": "^7.0.3",
        "effect": "^3.14.12",
        "graphql": "^16.10.0",
        "gsap": "3.13.0",
        "js-cookie": "^3.0.5",
        "motion": "^12.12.1",
        "negotiator": "^1.0.0",
        "next": "15.3.1",
        "nodemailer": "^7.0.3",
        "payload": "^3.35.1",
        "qrcode": "^1.5.4",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-hook-form": "^7.56.0",
        "sharp": "0.34.1",
        "uuid": "^11.1.0",
        "zod": "^3.24.3",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "15.3.1",
        "@svgr/webpack": "^8.1.0",
        "@types/js-cookie": "^3.0.6",
        "@types/negotiator": "^0.6.3",
        "@types/node": "^22.14.1",
        "@types/qrcode": "^1.5.5",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "eslint": "^9.25.1",
        "eslint-config-next": "^15.3.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-perfectionist": "^4.12.1",
        "eslint-plugin-promise": "^7.2.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.0"
    },
    "engines": {
        "node": "^18.20.2 || >=20.9.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "sharp"
        ],
        "overrides": {
            "@types/react": "^19.0.12",
            "@types/react-dom": "^19.0.4",
            "react": "19.1.0",
            "react-dom": "19.1.0",
            "@payloadcms/email-nodemailer": "^3.31.0",
            "@payloadcms/ui": "^3.31.0"
        }
    }
}
